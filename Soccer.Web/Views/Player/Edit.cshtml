@model Soccer.Web.ViewModels.PlayerViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "_FormLayout";
}

<h1>Edit</h1>

<h4>Player</h4>
<hr />

<div class="row">
    <div class="col-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="CNP" class="form-label"></label>
                <input asp-for="CNP" asp-validate class="form-control" disabled />
            </div>
            
            <partial name="_Player" />
            
            <div class="mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
    
    <div class="mt-2">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
