@model Soccer.Web.ViewModels.PlayerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "_FormLayout";
}

<h2>Create Player</h2>


<div class="row">
    <div class="col-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="CNP" class="form-label"></label>
                <input asp-for="CNP" asp-validate class="form-control" />
                
                <div class="invalid-feedback">
                    <span asp-validation-for="CNP"></span>
                </div>
            </div>

            <partial name="_Player" />
            
            <div class="mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
